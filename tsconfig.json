{
  "compilerOptions": {
    "lib": [
      "es2017",
      "es2015",
      "dom",
      "es6"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "strict": true,
    "noImplicitAny": true,
    //    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**.ts"
  ]
}
